[core]
        excludesfile = ~/.gitignore
	editor = vim
	pager = cat

[alias]
	ci = commit
	co = checkout
	st = status
	b = branch
	l = log -5
	cleanup = !git remote prune origin && git gc && git clean -df && git stash clear

[color]
	status = auto
	branch = auto
	interactive = auto
	diff = auto

[color "diff"]
        meta = yellow

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
